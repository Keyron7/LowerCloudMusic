<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:id="@+id/touxiang"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_above="@+id/code"
            android:layout_marginBottom="0dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Barbara Andrews"
            android:textColor="#FF1C252A"
            android:textSize="25sp">

        </TextView>

        <ImageView
            android:id="@+id/map_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/code"
            android:layout_alignParentStart="true"
            android:layout_marginStart="125dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/code" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_above="@+id/item"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:text="45000"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/fllowers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="2.5K"
                    android:textColor="#FF323E46"
                    android:textSize="25sp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fllowers"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Fllowers"
                    android:textColor="#FFB7C4CB"
                    android:textSize="20sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5K"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:textColor="#FF323E46"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/posts"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Posts"
                    android:textColor="#FFB7C4CB"
                    android:textSize="20sp" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/fllowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5K"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:textColor="#FF323E46"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fllowing"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Following"
                    android:textColor="#FFB7C4CB"
                    android:textSize="20sp" />


            </RelativeLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/like"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_above="@+id/name"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/shape_like" />

        <ImageView
            android:id="@+id/right"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/name"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/shape_right" />

        <ImageView
            android:id="@+id/chat"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_above="@+id/name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/shape_chat" />

    </RelativeLayout>

</RelativeLayout>
