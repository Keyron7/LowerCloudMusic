<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/playlist_image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp" />

    <ImageButton
        android:id="@+id/playlist_play"
        android:background="#ffff"
        android:src="@mipmap/play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/myplaylist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/playlist_image"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/playlist_image"
        android:gravity="center"
        android:text="text1111111111111111"
        android:textSize="20sp"
        android:textColor="#FF1C252A" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myplaylist_name"
        android:layout_alignStart="@+id/myplaylist_name"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="test11111111111"
        android:textColor="#FF0091EA"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/playlist_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/myname"
        android:layout_alignStart="@+id/myname"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/playlist" />

    <TextView
        android:id="@+id/number_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myname"
        android:layout_alignBottom="@+id/playlist_logo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_toEndOf="@+id/playlist_logo"
        android:text="11tracks-1993"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/myname"
        android:layout_alignBottom="@+id/playlist_logo"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/number_time"
        android:src="@mipmap/dots" />

</RelativeLayout>