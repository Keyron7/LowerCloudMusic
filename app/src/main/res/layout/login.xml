<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>


    <EditText
        android:id="@+id/user_name"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:background="@drawable/shape"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="top"
        android:paddingTop="9dp"
        android:paddingLeft="20dp"
        android:textColor="#ff1c252a"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/user_password"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:paddingTop="9dp"
        android:paddingLeft="20dp"
        android:background="@drawable/shape"
        android:layout_below="@+id/user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="top"
        android:textColor="#ff1c252a"
        android:textSize="19sp" />

    <TextView
        android:gravity="center"
        android:text="Forget your password"
        android:id="@+id/forget_password"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user_password"
        android:layout_marginTop="17.5dp"
        android:layout_width="155dp"
        android:layout_height="19dp"/>
    <Button
        android:id="@+id/login"
        android:background="@mipmap/red"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/forget_password"
        android:layout_marginTop="23.5dp"
        android:layout_width="180dp"
        android:layout_height="45dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape1"/>
    <TextView
        android:gravity="center"
        android:text="Sign with a social account"
        android:id="@+id/other_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login"
        android:layout_marginTop="60.5dp"
        android:layout_width="155dp"
        android:layout_height="19dp"/>
    <Button
        android:background="@mipmap/r1"
        android:id="@+id/facebook_login"
        android:text="Login with Facebook"
        android:textSize="18sp"
        android:textColor="#FFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22.5dp"
        android:layout_below="@+id/other_login"
        android:layout_width="260dp"
        android:layout_height="44dp"/>
    <Button

        android:text="Login with Twitter"
        android:background="@mipmap/r"
        android:textColor="#FFFF"
        android:id="@+id/twitter_login"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_below="@+id/facebook_login"
        android:layout_marginTop="15dp"
        android:layout_width="260dp"
        android:layout_height="44dp"/>
</RelativeLayout>
